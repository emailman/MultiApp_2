<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="edu.rjones95dttc.multiapp.MainActivity">

    <Button
        android:text="@string/create_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMainEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:id="@+id/btnMainCreateString"
        android:onClick="onBtnCreateStringClick"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etMainEditText"
        android:textSize="22sp"
        android:inputType="text"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp" />

    <TextView
        android:text="@string/enter_data"
        android:paddingTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_above="@+id/btnMainCreateString"
        android:layout_alignStart="@+id/btnMainCreateString"
        android:layout_marginBottom="90dp" />
</RelativeLayout>
